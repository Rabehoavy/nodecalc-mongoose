<!DOCTYPE html>
<html lang="fr">
<head>
 <% include partials/head %> 
</head>
<body>
<% include partials/menu %>
<div class="container-fluid bg-3 text-center">    
  <div class="row">
    <div class="col-sm-3">
      
      
    </div>
    <div class="col-sm-6"> 
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td>n°</td>
            <td>Nombre 1</td>
            <td>Opérateur</td>
            <td>Nombre 2</td>
            <td>&nbsp;</td>
            <td>Résultat</td>
            <td>Action</td>
            <td>Etat</td>
          </tr>
        </thead>
        <tbody>
      <% if (page) { %>
            <% for(var i = 0; i < page.length; i++) { %>
              <tr>
                <td><%= (i + 1) %></td>
                <td><%= page[i].nombre1 %></td>
                <td><%= page[i].operateur %></td>
                <td><%= page[i].nombre2 %></td>
                <td>=</td>
                <td>
                    <%= page[i].resultat %>
                </td>
                <td>
                      <% if (page[i].statut === true) { %>
                    <a href="/calculer/<%= page[i]._id %>" class="btn btn-success">Calculer</a>
                    <a href="calculatrice/update/<%= page[i]._id %>" class="btn btn-info" id="modifier">Modifier</a>
                    <a href="delete/<%= page[i]._id %>" class="btn btn-danger" disabled="disabled">Supprimer</a>
                    
                </td>
                <td>
                    <a href="/desactiver/<%= page[i]._id %>" class="btn btn-danger">Désactiver</a>
                      <% } else { %>
                    <a href="/activer/<%= page[i]._id %>" class="btn btn-success">Activer</a>
                      <% } %>
                </td>
              </tr>
            <% } %>
          <% } %>
		  </tbody>
      </table>
    </div>
    <div class="col-sm-3"> 
      
    </div>
  </div>
</div>
</body>
<% include partials/script %>
</html>